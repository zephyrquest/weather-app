<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.CitiesListPage"
             BackgroundColor="#87CEEB">
    
    <Grid RowDefinitions="Auto,Auto,*">
        <!-- App title frame -->
        <Frame Grid.Row="0"
               BackgroundColor="White"
               CornerRadius="0"
               Padding="15"
               HasShadow="True"
               HorizontalOptions="Fill"
               VerticalOptions="Start">

            <Label Text="WeatherApp"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#1E3A8A"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" />
        </Frame>
        
        <!-- Add City Button -->
        <HorizontalStackLayout Grid.Row="1"
                               Padding="10"
                               HorizontalOptions="End"
                               VerticalOptions="Center">
            <Button Text="Add City"
                    BackgroundColor="#1E3A8A"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="8"
                    Padding="10"
                    Clicked="OnAddCityClicked" />
        </HorizontalStackLayout>

        <!-- Cities list -->
        <CollectionView Grid.Row="2"
                        ItemsLayout="VerticalList"
                        SelectionMode="Single"
                        SelectionChanged="OnListItemSelected"
                        ItemsSource="{Binding Cities}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="15" 
                            Margin="10"
                            BackgroundColor="White" 
                            StrokeShape="RoundRectangle 20"
                            >
                        <StackLayout>
                            <Label Text="{Binding Name}"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="#1E3A8A"
                                   FontFamily="OpenSans" />
                            <Label Text="{Binding Country}"
                                   FontSize="18"
                                   TextColor="#1E3A8A"
                                   FontFamily="OpenSans" />
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding Latitude, StringFormat='Lat: {0}'}"
                                       FontSize="16"
                                       TextColor="#1E3A8A"
                                       FontFamily="OpenSans" />
        
                                <Label Text="{Binding Longitude, StringFormat='Lon: {0}'}"
                                       FontSize="16"
                                       TextColor="#1E3A8A"
                                       FontFamily="OpenSans" />
                            </HorizontalStackLayout>
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>