<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Pages.CityDetailsPage"
             BackgroundColor="#87CEEB">

    <ContentPage.Content>
        <VerticalStackLayout VerticalOptions="Center" 
                             HorizontalOptions="Center"
                             Spacing="15"
                             Padding="20">

            <Label Text="{Binding City.Name}" 
                   FontSize="50"
                   FontAttributes="Bold"
                   TextColor="#1E3A8A"
                   HorizontalTextAlignment="Center" />

            <Image Source="{Binding Weather.Icon}"
                   WidthRequest="100"
                   HeightRequest="100"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10" />

            <Label Text="{Binding Weather.Main}" 
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center" />

            <Label Text="{Binding Weather.Description}" 
                   FontSize="24"
                   TextColor="White"
                   HorizontalTextAlignment="Center" />
            
            <Grid Padding="20" ColumnSpacing="10" RowSpacing="10">
                  <Grid.RowDefinitions>
                      <RowDefinition Height="Auto"/>
                      <RowDefinition Height="Auto"/>
                      <RowDefinition Height="Auto"/>
                      <RowDefinition Height="Auto"/>
                      <RowDefinition Height="Auto"/>
                      <RowDefinition Height="Auto"/>
                      <RowDefinition Height="Auto"/>
                      <RowDefinition Height="Auto"/>
                  </Grid.RowDefinitions>
                  
                  <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto"/>  <!-- Labels on the left -->
                      <ColumnDefinition Width="*"/>  <!-- Weather data on the right -->
                  </Grid.ColumnDefinitions>

                  <Label Text="Temperature:"
                         FontSize="18" TextColor="White" 
                         Grid.Row="0" Grid.Column="0" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="{Binding Weather.Temperature, StringFormat='{0}°', TargetNullValue='No info available'}" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="0" Grid.Column="1" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="Min temperature:" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="1" Grid.Column="0" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="{Binding Weather.MinTemperature, StringFormat='{0}°', TargetNullValue='No info available'}" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="1" Grid.Column="1" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="Max temperature:" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="2" Grid.Column="0" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="{Binding Weather.MaxTemperature, StringFormat='{0}°', TargetNullValue='No info available'}" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="2" Grid.Column="1" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="Air Pressure:" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="3" Grid.Column="0" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="{Binding Weather.Pressure, StringFormat='{0} hPA', TargetNullValue='No info available'}" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="3" Grid.Column="1" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="Humidity:" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="4" Grid.Column="0" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="{Binding Weather.Humidity, StringFormat='{0} %', TargetNullValue='No info available'}" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="4" Grid.Column="1" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="Wind speed:" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="5" Grid.Column="0" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="{Binding Weather.WindSpeed, StringFormat='{0} m/s', TargetNullValue='No info available'}" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="5" Grid.Column="1" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="Cloudiness:" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="6" Grid.Column="0" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="{Binding Weather.Cloudiness, StringFormat='{0} %', TargetNullValue='No info available'}" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="6" Grid.Column="1" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="Precipitation:" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="7" Grid.Column="0" 
                         HorizontalTextAlignment="Start" />

                  <Label Text="{Binding Weather.Precipitation, StringFormat='{0} mm/h', TargetNullValue='No info available'}" 
                         FontSize="18" TextColor="White" 
                         Grid.Row="7" Grid.Column="1" 
                         HorizontalTextAlignment="Start" />
            </Grid>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>